ul {
  margin: 0;
  padding: 0;
}

body {
  background-color: #e6e6e6;
  font-family: "Aller", Arial, sans-serif;

}

nav {
  -webkit-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;
  background-color: #262626;
  position: fixed;
  top: 50px;
  bottom: 0;
  width: 50px;

}

nav.left {
  left: 0;

}

nav.right {
  right: 0;

}

.button > input[type="checkbox"] {
  display: none;

}

.button > input[type="checkbox"] + [data-icon] {
  opacity: .5;

}

.button > input[type="checkbox"]:checked + [data-icon] {
  opacity: 1;

}

nav > .button,
nav > .button + ul > li > .button {
  display: block;
  cursor: pointer;
  height: 50px;
  line-height: 50px;
  color: #fff;
  text-decoration: none;
  text-align: center;
  position: relative;
  border-top: 1px solid #262626;

}

nav > .button:first-child {
  border-bottom: 1px solid #262626;

}

nav > .button:first-child
nav > .button + ul > li > .button {
  border-top: none;

}

nav > .button.active {
  width: 50px;
  border-top: none;

}

nav.left > .button.active {
  left: 0px;
}

nav.right > .button.active {
  right: 10px;
  padding-left: 10px;

}

nav > .button.active:before {
  content: "";
  position: absolute;
  top: 0;
  width: 0px;
  border-top: 50px solid #e6e6e6;
  height: 0px;

}

nav.left > .button.active:before {
  content: "";
  position: absolute;
  top: 0;
  left: 50px;
  width: 0px;
  border-top: 50px solid #e6e6e6;
  border-left: 10px solid transparent;
  height: 0px;

}

nav.right > .button.active:before {
  right: 50px;
  border-right: 10px solid transparent;

}

nav > .button.active:after {
  content: "";
  position: absolute;
  top: 50px;
  right: 50px;
  width: 0px;
  border-bottom: 15px solid transparent;
  height: 0px;

}

nav.left > .button.active:after {
  left: 50px;
  top: 17px;
  border-left: 10px solid transparent;

}

nav.right > .button.active:after {
  right: 50px;
  border-right: 10px solid transparent;

}

nav > .button + ul > li {
  display: block;

}

