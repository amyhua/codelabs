<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="page" data-sidebar="#lessons">
  <% unless current_user %>
  <div class="jumbotron">
      <div>
        <h1>Hello, class!</h1>
        <p>
          Welcome to your first dive into the world of web design.
          This course will teach you about modern web design
          from the ground up, starting with HTML and moving onto CSS and
           Javascript. By the end of this course, you will have known
          enough to design your own website and understand how to continue
          improving your skills on your own.<br><br>
          You are in for a world of fun.<br><br>

        </p>
        <p><a data-toggle="modal" data-target="#modal-signup" class="btn btn-primary btn-lg">Get Started »</a></p>
      </div>
    </div>
  <% end %>

      <div class="row">
        <div class="col-lg-12">
          <h2>Lessons in Web Design!</h2><br>

          <div class="jumbotron">
            <div>
              <% first_lesson = @upcoming_lessons.first %>
              <h4 class="subheader"><i class="icon-beaker"> </i><%= first_lesson.date.strftime('%a %D')%></h4>
              <h3><%= link_to first_lesson.name, lesson_path(first_lesson) %></h3>
              <p>
                <%= first_lesson.description %><br><br>
                <a class="btn btn-default" href="<%= lesson_path(first_lesson)%>">View lesson »</a>
              </p><br>
              <%= image_tag @comic %>
            </div>
          </div>

        </div>
      </div>

  <h3 id="upcoming">Current & Upcoming lessons</h3>
  <% for lesson in @upcoming_lessons %>
    <div class="row">
            <div class="col-sm-1">
              <h1><i class="icon-beaker"></i></h1>
            </div>
            <div class="col-sm-10">
              <h4><span class="subheader"><%= lesson.date.strftime('%a %D')%></span><br><%= link_to lesson.name, lesson_path(lesson)%></h4>
              <p><%= lesson.description%></p>
              <p><a class="btn btn-default" href="<%= lesson_path(lesson)%>">View lesson »</a></p>
              <br>
            </div>
    </div>
  <% end %>

      <hr>
  <h3 id="past">Past lessons</h3>
  <% for lesson in @past_lessons %>
      <div class="row">
        <div class="col-sm-1">
          <h1><i class="icon-beaker"></i></h1>
        </div>
        <div class="col-sm-10">
          <h4><span class="subheader"><%= lesson.date.strftime('%a %D')%></span><br><%= link_to lesson.name, lesson_path(lesson)%></h4>
          <p><%= lesson.description%></p>
          <p><a class="btn btn-default" href="<%= lesson_path(lesson)%>">View lesson »</a></p>
          <br>
        </div>
      </div>
  <% end %>

    <div class="vimiumReset vimiumHUD" style="right: 150px; opacity: 0; display: none;"></div>
</div>