<div class="wide center clearfix">
  <% unless @prev_lesson.nil? %>
      <div class="pull-left">
        <a href="<%= lesson_path(@prev_lesson)%>">
          <div class="pull-left">
            <i class="icon-chevron-left"></i>
          </div>
          <div class="pull-left indent-left narrow align-left">
            <em>Prev Lesson</em>
          </div>
        </a>
      </div>
  <% end %>

  <% unless @next_lesson.nil? %>
      <div class="pull-right">
        <a href="<%= lesson_path(@next_lesson)%>">
          <div class="pull-right">
            <i class="icon-chevron-right"></i>
          </div>
          <div class="pull-right indent-right align-right narrow">
            <em>Next Lesson</em>
          </div>

        </a>
      </div>
  <% end %>
</div>
<br>
<br>



<div class="panel panel-default">
  <div class="panel-body shoulder-margins">
    <h2 class="text"><%= @lesson.name %></h2>
    <%= link_to 'Edit Lesson', edit_lesson_path(@lesson) if current_user.admin %>
    <h4 class="subheader text"><%= @lesson.date.strftime('%a %D')%></h4>
    <p class="markdown text">
      <%= h "\n" + @lesson.content %>
    </p>
  </div>
</div>
<br>
<%= render 'lesson_nav' %>
