<%= simple_form_for @link=Link.new, html: {class: 'narrow form'} do |f| %>
    <%= f.input :title, label: false, placeholder: 'Website Title',
                input_html: {class: 'validate[required] form-control'},
                wrapper_html: { class: 'form-group' } %>

    <%= f.input :url, label: false, placeholder: 'URL (http://....)',
    input_html: {class: 'validate[required] validate[custom[url]] form-control'},
    wrapper_html: {class: 'form-group'} %>

    <%= f.input :description, label: false, placeholder: 'Short Description',
                input_html: {class: 'validate[required] brief form-control', maxlength: 400},
                hint: 'Max. 400 characters',
                wrapper_html: {class: 'form-group'} %>

    <%= f.association :category, label: false, prompt: 'Choose a Category',
                input_html: {class: 'form-control'},
                wrapper_html: {class: 'form-group'}%>

    <%= f.input :image, label: false, placeholder: 'Image URL (http://...)',
                input_html: {class: 'form-control validate[custom[url]] validate[custom[imageurl]]', maxlength: 200},
                hint: 'Share an image URL of the website (optional). Image URL should end in .gif, .png, .jpeg, .jpg.',
                wrapper_html: {class: 'form-group'} %>
    <div class="center">

      <%= f.submit 'Submit a link', class: 'btn btn-success' %>
    </div>

<% end %>